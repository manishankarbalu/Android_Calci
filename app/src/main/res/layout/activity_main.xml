<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.commonman.manishankar.manicalc.MainActivity">

    <Button
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text="1"
        android:id="@+id/button1"
        android:textAlignment="center"
        android:textColor="#00FF22"
        android:textSize="20dp"
        android:onClick="onClick1"
        android:layout_above="@+id/button13"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text="2"
        android:id="@+id/button2"
        android:textAlignment="center"
        android:textColor="#00FF22"
        android:textSize="20dp"
        android:onClick="onClick1"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/button1"
        android:layout_toEndOf="@+id/button1" />

    <Button
        android:layout_width="45sp"
        android:layout_height="45sp"
        android:text="3"
        android:id="@+id/button3"
        android:textColor="#00FF22"
        android:textSize="20dp"
        android:textAlignment="center"
        android:onClick="onClick1"
        android:layout_alignTop="@+id/button2"
        android:layout_toLeftOf="@+id/button13"
        android:layout_toStartOf="@+id/button13" />

    <Button
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text="4"
        android:id="@+id/button4"
        android:textAlignment="center"
        android:textColor="#00FF22"
        android:textSize="20dp"
        android:onClick="onClick1"
        android:layout_above="@+id/button8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text="5"
        android:id="@+id/button5"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="#00FF22"
        android:onClick="onClick1"
        android:layout_alignTop="@+id/button14"
        android:layout_toLeftOf="@+id/button13"
        android:layout_toStartOf="@+id/button13" />

    <Button
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text="+"
        android:id="@+id/button11"
        android:textSize="20dp"
        android:textColor="#00FF22"
        android:textAlignment="center"
        android:onClick="onClick1"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_toRightOf="@+id/button3"
        android:layout_toEndOf="@+id/button3" />

    <Button
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text="-"
        android:id="@+id/button12"
        android:textAlignment="center"
        android:textColor="#00FF22"
        android:textSize="20dp"
        android:onClick="onClick1"
        android:layout_below="@+id/button4"
        android:layout_toRightOf="@+id/button14"
        android:layout_toEndOf="@+id/button14" />

    <TextView
        android:layout_width="250sp"
        android:layout_height="50sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/button1"
        android:layout_toEndOf="@+id/button1"
        android:text="ans" />

    <TextView
        android:layout_width="250sp"
        android:layout_height="50sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/button3"
        android:layout_alignEnd="@+id/button3"
        android:layout_marginTop="58dp" />

    <Button
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text="c"
        android:id="@+id/cli"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="#00FF22"
        android:onClick="clear"
        android:layout_above="@+id/button13"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2" />

    <Button
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text="*"
        android:id="@+id/button13"
        android:textAlignment="center"
        android:textColor="#00FF22"
        android:textSize="20dp"
        android:onClick="onClick1"
        android:layout_above="@+id/button4"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text="/"
        android:id="@+id/button14"
        android:textColor="#00FF22"
        android:textSize="20dp"
        android:textAlignment="center"
        android:onClick="onClick1"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_toRightOf="@+id/button11"
        android:layout_toEndOf="@+id/button11" />

    <Button
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text="="
        android:id="@+id/button"
        android:onClick="onClick2"
        android:textAlignment="center"
        android:textColor="#00FF22"
        android:textSize="20dp"
        android:layout_alignTop="@+id/button4"
        android:layout_toRightOf="@+id/button4"
        android:layout_toEndOf="@+id/button4" />

    <Button
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text="6"
        android:id="@+id/button6"
        android:onClick="onClick1"
        android:textAlignment="center"
        android:textColor="#00FF22"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/button3"
        android:layout_alignBottom="@+id/button3"
        android:layout_toRightOf="@+id/button8"
        android:layout_toEndOf="@+id/button8" />

    <Button
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text="7"
        android:id="@+id/button7"
        android:textColor="#00FF22"
        android:textSize="20dp"
        android:textAlignment="center"
        android:onClick="onClick1"
        android:layout_alignBottom="@+id/button10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text="8"
        android:id="@+id/button8"
        android:onClick="onClick1"
        android:textColor="#00FF22"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_marginBottom="123dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/button13"
        android:layout_alignStart="@+id/button13" />

    <Button
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text="9"
        android:id="@+id/button9"
        android:textAlignment="center"
        android:textColor="#00FF22"
        android:textSize="20dp"
        android:onClick="onClick1"
        android:layout_below="@+id/button4"
        android:layout_toLeftOf="@+id/button5"
        android:layout_toStartOf="@+id/button5" />

    <Button
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text="0"
        android:id="@+id/button10"
        android:onClick="onClick1"
        android:textAlignment="center"
        android:textColor="#00FF22"
        android:textSize="20dp"
        android:layout_below="@+id/button12"
        android:layout_toLeftOf="@+id/button14"
        android:layout_toStartOf="@+id/button14" />

</RelativeLayout>
